<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="NativeMind_Marketplace::marketplace" title="Marketplace" sortOrder="100">
                    <resource id="NativeMind_Marketplace::sellers" title="Sellers" sortOrder="10">
                        <resource id="NativeMind_Marketplace::sellers_manage" title="Manage Sellers" sortOrder="10"/>
                        <resource id="NativeMind_Marketplace::sellers_approve" title="Approve Sellers" sortOrder="20"/>
                        <resource id="NativeMind_Marketplace::sellers_suspend" title="Suspend Sellers" sortOrder="30"/>
                    </resource>
                    <resource id="NativeMind_Marketplace::products" title="Products" sortOrder="20">
                        <resource id="NativeMind_Marketplace::products_manage" title="Manage Products" sortOrder="10"/>
                        <resource id="NativeMind_Marketplace::products_approve" title="Approve Products" sortOrder="20"/>
                    </resource>
                    <resource id="NativeMind_Marketplace::reviews" title="Reviews" sortOrder="30">
                        <resource id="NativeMind_Marketplace::reviews_manage" title="Manage Reviews" sortOrder="10"/>
                        <resource id="NativeMind_Marketplace::reviews_approve" title="Approve Reviews" sortOrder="20"/>
                    </resource>
                    <resource id="NativeMind_Marketplace::messages" title="Messages" sortOrder="40">
                        <resource id="NativeMind_Marketplace::messages_manage" title="Manage Messages" sortOrder="10"/>
                        <resource id="NativeMind_Marketplace::messages_moderate" title="Moderate Messages" sortOrder="20"/>
                    </resource>
                    <resource id="NativeMind_Marketplace::commission" title="Commission" sortOrder="50">
                        <resource id="NativeMind_Marketplace::commission_manage" title="Manage Commission" sortOrder="10"/>
                        <resource id="NativeMind_Marketplace::commission_settings" title="Commission Settings" sortOrder="20"/>
                    </resource>
                    <resource id="NativeMind_Marketplace::analytics" title="Analytics" sortOrder="60">
                        <resource id="NativeMind_Marketplace::analytics_dashboard" title="Dashboard" sortOrder="10"/>
                        <resource id="NativeMind_Marketplace::analytics_sellers" title="Seller Analytics" sortOrder="20"/>
                        <resource id="NativeMind_Marketplace::analytics_products" title="Product Analytics" sortOrder="30"/>
                    </resource>
                    <resource id="NativeMind_Marketplace::settings" title="Settings" sortOrder="70">
                        <resource id="NativeMind_Marketplace::settings_general" title="General Settings" sortOrder="10"/>
                        <resource id="NativeMind_Marketplace::settings_subdomain" title="Subdomain Settings" sortOrder="20"/>
                    </resource>
                    <resource id="NativeMind_Marketplace::config" title="Configuration" sortOrder="80"/>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
